{
  "private": true,
  "name": "empire",
  "version": "1.5.0",
  "type": "module",
  "main": "./nuxt.config.ts",
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "workspaces": [
    ".demo",
    ".app",
    "layers/*"
  ],
  "scripts": {
    "dev": "pnpm --filter=app dev",
    "build": "pnpm --filter=app build",
    "generate": "pnpm --filter=app generate",
    "demo:dev": "pnpm --filter=demo dev",
    "demo:build": "pnpm --filter=demo build",
    "clean:all": "pnpm -r clean && rimraf .nuxt .output node_modules",
    "test": "run-p test:*",
    "test:tsc-demo": "pnpm --filter=demo typecheck",
    "test:lint": "eslint .",
    "lint": "run-s lint:eslint:fix lint:eslint:fix-demo",
    "lint:eslint:fix": "eslint --fix .",
    "lint:eslint:fix-demo": "eslint -c layers/documentation/examples/.eslintrc.cjs --fix layers/documentation/examples"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "eslint": "9.21.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-tailwindcss": "3.18.0",
    "eslint-plugin-vue": "9.32.0",
    "eslint-plugin-vuejs-accessibility": "2.2.1",
    "lint-staged": "15.4.3",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "std-env": "3.8.0",
    "tailwindcss": "3.4.3",
    "typescript": "5.8.2",
    "vue-tsc": "2.2.4"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(ts|vue)": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss",
        "vue",
        "vite",
        "@unhead/vue",
        "webpack"
      ]
    },
    "patchedDependencies": {
      "smooth-dnd@0.12.1": "patches/smooth-dnd@0.12.1.patch"
    }
  }
}
